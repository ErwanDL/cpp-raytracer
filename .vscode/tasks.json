{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build project",
            "type": "shell",
            "command": "cd build && make raytracer",
            "group": "build"
        },
        {
            "label": "Build & Run project",
            "type": "shell",
            "dependsOn": ["Build project"],
            "command": "./build/raytracer",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build & Run tests",
            "type": "shell",
            "command": "cd build && make runtests && ./runtests",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
