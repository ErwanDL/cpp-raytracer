{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build project",
            "type": "shell",
            "command": "cd src && SRCFILES=*.cpp && g++ $SRCFILES -g -std=c++17 -pedantic -Weffc++ -Werror -Wall -Wextra -Wconversion -o ../main",
            "group": "build"
        },
        {
            "label": "Build & Run project",
            "type": "shell",
            "dependsOn": ["Build project"],
            "command": "./main",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build & Run project without warnings",
            "type": "shell",
            "command": "cd src && SRCFILES=*.cpp && g++ $SRCFILES -o -std=c++17 ../main && ../main",
            "group": "build"
        }
    ]
}
